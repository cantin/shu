.content
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    %fieldset
      - if resource.errors.any?
        .alert-message.error= t(resource.errors.full_messages)
      .clearfix
        = f.label :email, '电子邮箱'
        .input= f.text_field :email, :placeholder => '电子邮箱', :label => '电子邮箱', readonly: true, class: 'xlarge'
      .clearfix
        = f.label :name, '昵称'
        .input= f.text_field :name, :placeholder => '昵称', :label => '昵称', class: 'xlarge'
      .clearfix
        = f.label :current_password, '当前密码（必须填写）'
        .input= f.password_field :current_password, :placeholder => '当前密码', :label => '当前密码', class: 'xlarge'
      .clearfix
        = f.label :password, '新密码（如果不更改密码，无须填写）'
        .input= f.password_field :password, :placeholder => '密码', :label => '密码', class: 'xlarge'
      .clearfix
        = f.label :password_confirmation, '确认新密码'
        .input= f.password_field :password_confirmation, :placeholder => '确认新密码', :label => '确认新密码', class: 'xlarge'
    .actions
      %button.btn.primary{ :type => 'submit' }= '更新'
